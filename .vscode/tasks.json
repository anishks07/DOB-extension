{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "npm run compile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"],
            "detail": "Compiles the TypeScript files."
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "npm run watch",
            "group": "build",
            "problemMatcher": ["$tsc-watch"],
            "detail": "Watches for changes in TypeScript files and recompiles."
        }
    ]
}